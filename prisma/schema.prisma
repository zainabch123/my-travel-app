generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  HOTEL
  ATTRACTION
  ACTIVITY
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Hotels {
  id Int @id @default(autoincrement())
  name    String
  type    Type @default(HOTEL)
  address String
  city    String
  country String
  imageUrl String
  rating   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Attractions {
  id Int @id @default(autoincrement())
  name    String
  type    Type @default(ATTRACTION)
  address String
  city    String
  country String
  imageUrl String
  rating   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Activities {
  id Int @id @default(autoincrement())
  name    String
  type    Type @default(ACTIVITY)
  address String
  city    String
  country String
  imageUrl String
  rating   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}